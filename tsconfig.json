{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["mocha", "node"],
    "paths": {
      "@app/*": ["./src/*"],
    }
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
